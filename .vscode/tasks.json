{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run C",
			"command": "gcc",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Run Java",
			"command": "javac",
			"args": [
				"${file}",
				"-d",
				"${fileDirname}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Run C++",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Run Python",
			"command": "python",
			"args": [
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}

		
	]
}